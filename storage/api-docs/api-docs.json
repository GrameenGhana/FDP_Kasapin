{
    "swagger": "2.0",
    "info": {
        "title": "FDP Kasapin",
        "description": "This API contains all allowable functionalities to be available internally to other resources & apps.You need to request a token to access this resource.",
        "contact": {
            "email": "jdavis@grameenfoundation.org"
        },
        "license": {
            "name": "Grameen Foundation",
            "url": "http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT"
        },
        "version": "2.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "paths": {
        "/auth/user/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Login as field Coordinator",
                "operationId": "api.auth.user.login",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "login email",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "login password",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Operation."
                    },
                    "401": {
                        "description": "Invalid Credentials."
                    },
                    "500": {
                        "description": "Could not create token"
                    }
                }
            }
        },
        "/auth/user/recommendation/{crop_id}": {
            "get": {
                "tags": [
                    "recommendation"
                ],
                "summary": "Get recommendations and calculations",
                "description": "Returns recommendations and calculations",
                "operationId": "api.auth.user.recommendation",
                "parameters": [
                    {
                        "name": "crop_id",
                        "in": "path",
                        "description": "crop id",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "authentication token",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "401": {
                        "description": "Invalid Credentials"
                    }
                }
            }
        },
        "/auth/user/survey/{country_id}": {
            "get": {
                "tags": [
                    "survey"
                ],
                "summary": "Get survey questions and skip logic",
                "description": "Returns questions and skip logic",
                "operationId": "api.auth.user.survey",
                "parameters": [
                    {
                        "name": "country_id",
                        "in": "path",
                        "description": "country id",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "authentication token",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "401": {
                        "description": "Invalid Credentials"
                    }
                }
            }
        }
    },
    "definitions": {
        "Response": {
            "required": [
                "data"
            ]
        }
    }
}